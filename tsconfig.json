{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2018",
        "sourceMap": true,
        "baseUrl": "./",
        "paths": {
            "@root/*": ["./*"],
            "@modules/*": ["./src/modules/*"]
        },
        "types": [
            "@types/jest",
            "@types/node"
        ]
    },
    "exclude": [
        "node_modules",
        "test",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}
